page{
  background-color: #F9F8FE;
}

.list{
  margin: 20rpx;
}
.news-header{
  background-color: #fff;
  padding: 32rpx 30rpx;
}

.news-header .title{
  font-size: 36rpx;
  color: #444;
  font-weight: 600;
  margin-bottom: 26rpx;
}

.news-header .des{
  font-size: 24rpx;
  color: #666;
}

.col-con{
  border-radius: 14rpx;
}

.van-collapse-item{
  margin-bottom: 20rpx!important;
}

.van-cell{
  border-radius: 14rpx!important;
  font-size: 30rpx!important;
  font-weight: 600;
}


.list-item{
  height: 150rpx;
  /* background-color: #fff; */
  /* border-radius: 8rpx; f6f6f6*/
  border-bottom:  1px solid #f6f6f6;
  padding: 30rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.list-item-image{
    width: 220rpx;
    height: 150rpx;
    min-width: 220rpx;
   
}

.list-item-image image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.list-item-text{
  height: 100%;
  padding-left: 24rpx;
  position: relative;
  padding: 8rpx 0 12rpx 24rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.list-item-text .text-title{
  font-family: PingFangSC;
  font-weight: 600;
  font-size: 28rpx;
  color: #23252B;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-item-text .text-desc{
  font-family: PingFangSC;
  font-size: 22rpx;
  color: #8D8D8D;
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
}


.list-item-text .text-zan{
  margin-left: 26rpx;
  display: flex;
}
