page{
  background-color: #F9F8FE;
}

.list{
  margin: 20rpx;
}
.news-header{
  background-color: #fff;
}

.news-header .title{
  font-size: 36rpx;
  color: #444;
  font-weight: 600;
  padding:28rpx 0 28rpx 28rpx;
}

.news-header .des{
  font-size: 24rpx;
  color: #666;
  padding: 0 0 26rpx 28rpx;
  display: flex;
  align-items: center;
}

.col-con{
  border-radius: 14rpx;
  padding-top: 0!important;
}

.van-collapse-item{
  margin-bottom: 26rpx!important;
}

.van-cell{
  border-radius: 14rpx!important;
  font-size: 32rpx!important;
  font-weight: 600;
  color: #444!important;
  padding:var(--cell-vertical-padding,16px) var(--cell-horizontal-padding,16px)!important;
}


.list-item{
  height: 90rpx;
  /* background-color: #fff; */
  /* border-radius: 8rpx; f6f6f6*/
  border-bottom:  1px solid #f6f6f6;
  padding: 30rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.list-item-image{
    width: 80rpx;
    height:80rpx;
    min-width: 80rpx;
   
}

.list-item-image image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.list-item-text{
  width: 100%;
  height: 100%;
  padding-left: 24rpx;
  position: relative;
  padding: 8rpx 0 12rpx 24rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.list-item-text .text-title{
  font-family: PingFangSC;
  font-weight: 600;
  font-size: 28rpx;
  color: #23252B;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-item-text .text-desc{
  font-family: PingFangSC;
  font-size: 22rpx;
  color: #8D8D8D;
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
}


.list-item-text .text-zan{
  margin-left: 26rpx;
  display: flex;
}

.img-box{
  font-size: 0;
}
.img-box image{
  width: 100%;
  height: 380rpx;
}

.description{
  padding: 30rpx;
  color: #444;
}

.des-line{
  margin:auto 20rpx;
}