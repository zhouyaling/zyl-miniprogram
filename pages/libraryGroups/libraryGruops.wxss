page{
  background-color: #F9F8FE;
}

.list{
  margin: 20rpx;
}
.news-header{
  background-color: #fff;
  padding: 32rpx 0 0 ;
}

.news-header .title{
  font-size: 36rpx;
  color: #444;
  font-weight: 600;
  margin-bottom: 20rpx;
  padding: 0rpx 30rpx;
}

.news-header .des{
  font-size: 24rpx;
  color: #666;
  padding: 0rpx 30rpx;
  margin-bottom: 20rpx;
}

.col-con{
  border-radius: 14rpx;
}

.van-collapse-item{
  margin-bottom: 26rpx!important;
}

.van-cell{
  border-radius: 14rpx!important;
  font-size: 32rpx!important;
  font-weight: 600;
  color: #444!important;
  padding:var(--cell-vertical-padding,16px) var(--cell-horizontal-padding,16px)!important;
}


.list-item{
  height: 150rpx;
  /* background-color: #fff; */
  /* border-radius: 8rpx; f6f6f6*/
  border-bottom:  1px solid #f6f6f6;
  padding: 30rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.list-item-image{
    width: 220rpx;
    height: 150rpx;
    min-width: 220rpx;
   
}

.list-item-image image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.list-item-text{
  width: 100%;
  height: 100%;
  padding-left: 24rpx;
  position: relative;
  padding: 8rpx 0 12rpx 24rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.list-item-text .text-title{
  font-family: PingFangSC;
  font-weight: 600;
  font-size: 28rpx;
  color: #23252B;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-item-text .text-desc{
  font-family: PingFangSC;
  font-size: 22rpx;
  color: #8D8D8D;
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
}


.list-item-text .text-zan{
  margin-left: 26rpx;
  display: flex;
}




.wrap{
  width: 100%;
position: relative;
}
.library-head-bk{
  width: 100%;
height: 150rpx;
background-color: #19CCB0;
position: relative;
margin-top: 50rpx;
}

.library-content{
  width: 100%;
  position: relative;
}

.library-tab{
  width: 94%;
height: 200rpx;
border-radius:20rpx;
background-color: #fff;
position: relative;
top: -100rpx;
margin: 0 3%;
box-sizing: border-box;

display: flex;
align-items: center;
justify-content: center;
}

.library-tab-item{
  width: 20%;
  text-align: center;
  font-size: 22rpx;
  color: #666;
}

.library-tab-item image{
  height: 80rpx; 
  width: 80rpx;
}

.library-list{
  width: 100%;
  margin-top: 30rpx;
}

.library-list-item{
  width: 94%;
  /* min-height: 180rpx; */
  border-radius:20rpx;
  background-color: #fff;
  margin: 0 3%;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx 0 rgba(0,0,0,.1);
  /* display: flex;
  align-items:center;
  flex-direction: column;
  justify-content:space-between; */
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
}

.library-list-total{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
}

.library-list-detail{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-top: 1px solid #F5F4F4;

}


.library-list-item .item-content{
  width: 90%;
overflow: hidden;
}

.library-list-total .item-title{
  font-weight: 600;
  font-size: 30rpx;
  color: #333;
}

.library-list-detail .item-title{
  font-size: 26rpx;
  color: #333;
}

.library-list-item .item-subtitle{
  font-size: 22rpx;
  color: #8B8B8B;
  margin: 12rpx 0;
}

.library-list-total .icon-check{
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: #DFDFDF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;

}

.library-list-total .icon-check.checked{
  background-color: #19CCB0;
}

.library-list-item .icon-check image{

}

.library-list-item .icon-edit{
  width: 68rpx;
  height: 60rpx;
}



.topNav{
  width: 100%;
  min-height: 100rpx;
  margin-top: 0rpx;
  position: fixed;
  top: 0;
  z-index: 999;
}

.topNav .navItem{
  width: 25%;
  float: left;
  /* padding: 40rpx 0 20rpx 0; */
  text-align: center;
  font-size: 30rpx;
  color: #23252B;
  font-weight: 600;
}

.topNav .navItem .label{
  padding: 40rpx 0 20rpx 0;
  
}

.topNav .navItem.active .label{
  display: inline-block;
  border-bottom: 4rpx solid #19CCB0;
  color: #19CCB0;
}
