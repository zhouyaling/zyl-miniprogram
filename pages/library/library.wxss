page{
  background-color: #F9F8FE;
}

.wrap{
  width: 100%;
position: relative;
}
.library-head-bk{
  width: 100%;
height: 150rpx;
background-color: #19CCB0;
position: relative;

}

.library-content{
  width: 100%;
  position: relative;
}

.library-tab{
  width: 94%;
height: 200rpx;
border-radius:20rpx;
background-color: #fff;
position: relative;
top: -100rpx;
margin: 0 3%;
box-sizing: border-box;

display: flex;
align-items: center;
justify-content: center;
}

.library-tab-item{
  width: 20%;
  text-align: center;
  font-size: 22rpx;
  color: #666;
}

.library-tab-item image{
  height: 80rpx; 
  width: 80rpx;
}

.library-list{
  width: 100%;
  margin-top: -70rpx;
}

.library-list-item{
  width: 94%;
  min-height: 180rpx;
  border-radius:20rpx;
  background-color: #fff;
  margin: 0 3%;
  box-sizing: border-box;
  /* display: flex;
  align-items:center;
  flex-direction: column;
  justify-content:space-between; */
  padding: 10rpx 30rpx;
  margin-bottom: 30rpx;
}

.library-list-total{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 30rpx 0;
}

.library-list-detail{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-top: 1px solid #F5F4F4;

}


.library-list-item .item-content{
  width: 72%;
}

.library-list-total .item-title{
  font-weight: 600;
  font-size: 30rpx;
  color: #333;
}

.library-list-detail .item-title{
  font-size: 26rpx;
  color: #333;
}

.library-list-item .item-subtitle{
  font-size: 22rpx;
  color: #8B8B8B;
  margin: 12rpx 0;
}

.library-list-total .icon-check{
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: #DFDFDF;
  display: flex;
  align-items: center;
  justify-content: center;

}

.library-list-total .icon-check.checked{
  background-color: #19CCB0;
}

