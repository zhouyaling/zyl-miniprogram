<view class="container">
	<view class="topWrap">
		<view class="swiperContent">
			<swiper indicator-dots="{{true}}" indicator-color="transprant" indicator-active-color="#fff" autoplay="{{false}}" interval="2000" duration="500">
				<block wx:for="{{bannerList}}" wx:key="*this">
					<swiper-item>
						<image src="{{item.url}}"></image>
					</swiper-item>
				</block>
			</swiper>
		</view>
		<view class="topNav">
			<view class="navItem active">
				<view class="label">临床</view>
			</view>
			<view class="navItem">
				<view class="label">实习</view>
			</view>
			<view class="navItem">
				<view class="label">就业</view>
			</view>
			<view class="navItem">
				<view class="label">视频</view>
			</view>
		</view>
	</view>
	<!-- 列表 -->
	<view class="listContent">
			<view class="list-item" wx:for="{{list}}">
        <view class="list-item-image">
          <image src="../images/img2.png"></image>
        </view>
        <view class="list-item-text">
          <view class="text-title">疫情过后，这5类医疗专业将大火</view>
          <view class="text-desc">
            <view>2020-4-13</view>
            <view class="text-zan">
              <image src="../images/icon-zan.png"></image>
              34
            </view>
          </view>
        </view>
			</view>
	</view>
</view>