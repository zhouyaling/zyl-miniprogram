<view class="container">
	<view class="topWrap">
		<view class="swiperContent">
			<swiper indicator-dots="{{true}}" indicator-color="transprant" indicator-active-color="#fff" autoplay="{{false}}" interval="2000" duration="500">
				<block wx:for="{{bannerList}}" wx:key="*this">
					<swiper-item>
						<image src="{{item.url}}"></image>
					</swiper-item>
				</block>
			</swiper>
		</view>
		<view class="topNav">
			<van-tabs active="a" animated color="#19CCB0" bind:click="handlerOnChangeTab">
				<van-tab title="临床" name="a"></van-tab>
				<van-tab title="实习" name="b"></van-tab>
				<van-tab title="就业" name="c"></van-tab>
				<van-tab title="视频" name="c"></van-tab>
			</van-tabs>
