			<view class="navItem">
				<view class="label">实习</view>
			</view>
			<view class="navItem">
				<view class="label">就业</view>
			</view>
			<view class="navItem">
				<view class="label">视频</view>
			</view> -->
		</view>
	</view>
	<!-- 列表 -->
	<view class="listContent">
			<view>
				<view class="list-item" wx:for="{{list}}">
					<navigator url="/pages/details/details">
						<view class="list-item-image">
							<image src="../images/img2.png"></image>
						</view>
					</navigator>
					<view class="list-item-text">
						<navigator url="/pages/details/details?id={{item.id}}">
							<view class="text-title">疫情过后，这5类医疗专业将大火</view>
						</navigator>
						<view class="text-desc">
							<view>2020-4-13</view>
							<view class="text-zan">
								<image src="../images/icon-zan.png"></image>
								34
							</view>
						</view>
					</view>
				</view>
			</view>
	</view>
</view>