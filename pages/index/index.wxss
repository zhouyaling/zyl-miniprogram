.card {
  /* background-color: #fff; */
  border-radius: 18rpx;
  height: 256rpx;
  width: 47%;
  /* box-shadow: 0 4rpx 16rpx 0 rgba(0,0,0,.1); */
  position: relative;
  margin: 0 1.5% 50rpx 1.5%;
  float: left;
}

.card .card-img {
  width: 100%;
  height: 170rpx;
  /* border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx; */
  border-radius: 14rpx;
}

.card-title {
  padding: 0rpx 20rpx 4rpx 10rpx;
  font-weight: 600;
  color: #444;
  font-size: 28rpx;

}

.card-des {
  font-size: 24rpx;
  color: #F83107;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10rpx;
}

.card-des text:nth-of-type(1) {
  font-size: 26rpx;
  color: #F83107;
  font-weight: 600;
}

.card-des text:nth-of-type(2) {
  float: right;
  font-size: 22rpx;
  color: #999;

}

.card-recommend {
  position: absolute;
  top: 0;
  right: 0;
  width: 70rpx;
  height: 70rpx;
}

.news-bar-scroll {
  width: 100%;
  margin-top:30rpx
}

.news-bar {
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 50rpx;
  width: 93%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.news-type {
  display: inline-block;
  width: 76rpx;
  background-color: #EEEEEE;
  font-size: 26rpx;
  text-align: center;
  color: #444;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  padding: 10rpx 10rpx;
}

.news-content {
  padding-left: 24rpx;
  font-size: 28rpx;
  color: #666;
}

.topMenu{
  width: 100%;
  margin-top: 30rpx;
}

.topMenu .topMenu-item{
  width: 33%;
  float: left;
  text-align: center;
  font-size: 24rpx;
  color: #444;
}

.topMenu-item image{
  width: 70rpx;
  height: 70rpx;
}