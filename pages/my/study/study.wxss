.page{
  padding: 40rpx 30rpx;
}
.card{
  background-color: #fff;
  border-radius: 18rpx;
  height: 430rpx;
  width: 100%;
  box-shadow: 0 4rpx 16rpx 0 rgba(0,0,0,.1);
  position: relative;
  margin-bottom: 40rpx;
}

.card .card-img{
  width: 100%;
  height: 300rpx;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
}

.card-title{
  padding:10rpx 20rpx 4rpx 20rpx;
  font-weight: 600;
  color: #333;
}

.card-des{
  padding: 0 20rpx;
}

.card-des text:nth-of-type(1){
  font-size: 28rpx;
  color: #F83107;
  font-weight: 600;
}

.card-des text:nth-of-type(2){
  float: right;
  font-size: 28rpx;
  color: #999;
}

.card-recommend{
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
}