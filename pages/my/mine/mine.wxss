/* pages/biz/mine/mine.wxss */

.container {
  padding: 0;
}

.funIcon {
  margin-bottom: 32rpx;
}

.mineInfo {
  background-color: #19CCB0;
  width: 100%;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  height: 250rpx;
  position: relative;
}

.mineInfo .top{
  width: 100%;
  text-align: center;
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;

}

.mineInfo image {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
}

.mineInfo .name {
  display: inline-block;
  font-size: 44rpx;
  color: #fff;
  letter-spacing: 0;
  line-height: 44rpx;
  margin-top: 14rpx;
}

.mineInfo .name .nickName {
  font-size: 44rpx;
  opacity: 1;
}

.mineInfo .name text {
  /* opacity: 0.7; */
  font-size: 44rpx;
  color: #fff;
  letter-spacing: 0;
  line-height: 44rpx;
}

.mineInfo .name .icon-icon_label_youjiantou {
  font-size: 24rpx;
  position: relative;
  top: -6rpx;
  left: 0;
  color: #fff;
}

.mineInfo .bottom {
  display: flex;
  flex-wrap: nowrap;
  margin-top: 40rpx;
}

.mineInfo .cell {
  flex: 1;
  text-align: center;
  position: relative;
}

.mineInfo .cell text {
  display: block;
  opacity: 0.7;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 24rpx;
}

.mineInfo .cell+.cell:after {
  /*border-left: 1rpx solid rgba(255,255,255,0.30)*/
  content: '';
  position: absolute;
  width: 1rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.30);
  left: 0;
  top: 50%;
  margin-top: -24rpx;
}

.mineInfo .cell text:first-child {
  opacity: 1;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
  margin-bottom: 17rpx;
}

.mineInfo .shareIcon {
  background: #fff;
  border-radius: 32rpx 0 0 32rpx;
  width: 128rpx;
  height: 56rpx;
  position: absolute;
  right: 0;
  top: 59rpx;
  font-size: 24rpx;
  color: #FF2F43;
  line-height: 56rpx;
}

.mineInfo .icon-icon_label_fenxiang {
  margin-left: 24rpx;
  font-size: 24rpx;
  margin-right: 8rpx;
  color: #FF2F43;
}

.funIcon {
  margin-top: 16rpx;
  background: #fff;
  box-shadow: 0 2rpx 20rpx 0 rgba(0, 0, 0, 0.05);
  width: 686rpx;
  padding-bottom: 42rpx;
}

.funIcon .cell {
  width: 25%;
  display: inline-block;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 24rpx;
  margin-top: 60rpx;
  position: relative;
}

.funIcon .cell .aLittle {
  position: absolute;
  color: #999;
  left: 50%;
  margin-left: -54rpx;
  margin-top: 5rpx;
  font-size: 20rpx;
}

.cell-num {
  font-weight: 500;
  font-size: 18rpx;
}

.funIcon .iconfont {
  display: block;
  font-size: 50rpx;
  margin-bottom: 28rpx;
  color: #666;
}

.mineList {
  width: 686rpx;
  margin-top: 40rpx;
}

.mineList .cell {
  width: 670rpx;
  height: 114rpx;
  position: relative;
  font-size: 32rpx;
  color: #29292b;
  line-height: 132rpx;
  margin-left: 12rpx;
  background: #fafafc;
  border-radius: 11rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.mineCell {
  /* border-bottom: 1rpx solid #e6e6e6; */
}

.mineList .icon-icon_label_youjiantou {
  position: absolute;
  top: 0rpx;
  right: 20rpx;
  color: #ccc;
  font-size: 28rpx;
}

.mineList .cell .msgNum {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #ff6084;
  font-size: 24rpx;
  display: inline-block;
  line-height: 32rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  right: 32rpx;
  top: 38rpx;
}

.navList {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.navList .radiusOne {
  margin-right: 20rpx;
  background: #fff;
  padding-top: 49rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.05);
  width: 213rpx;
  height: 188rpx;
}

.cenlie {
  margin-left: 20rpx;
}

.navList .radiusOne:last-child {
  margin-right: 0;
}

.navList .v1 {
  color: #666;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 0;
}

.navList .v2 {
  color: #999;
  font-size: 24rpx;
  /* padding-top: 6rpx; */
}

.navList .radius {
  width: 56rpx;
  height: 56rpx;
  line-height: 96rpx;
  border-radius: 96rpx;
  background: #fff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navList .radius image {
  width: 56rpx;
  height: 56rpx;
}

.navList .radius .iconfont {
  font-size: 48rpx;
}

.navList .text {
  text-align: center;
  margin-top: 14rpx;
  width: 140rpx;
}

.logoutClick {
  position: absolute;
  bottom: 48rpx;
  left: 32rpx;
  width: 686rpx;
  height: 88rpx;
  border-radius: 12rpx;
  background: #FF2F43;
  color: white;
  text-align: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 80rpx;
}

.showMask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.logBox {
  height: 344rpx;
  width: 750rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10000;
  transition: height 0.3s;
}

.logDes {
  height: 128rpx;
  border-bottom: 1rpx solid #e6e6e6;
  font-size: 28rpx;
  text-align: center;
  color: #999;
  line-height: 128rpx;
}

.desItem {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  text-align: center;
}

.desLogout {
  color: #ff6084;
}

.set-line {
  width: 100%;
  height: 16rpx;
  background-color: #f7f7f7;
}

.desCancel {
  color: #333;
}

.edit-button {
  width: 124rpx;
  height: 50rpx;
  border-radius: 31rpx;
  border: 4rpx solid #f0f0f3;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #e1e1ec;
  margin-top: -6rpx;
}

.mineIcons {
  width: 50rpx;
  height: 50rpx;
  margin: 0 6rpx 0 40rpx;
}

.icon-jiantou {
  position: absolute;
  top: 50%;
  right: 40rpx;
  margin-top: -23rpx;
  height: 46rpx;
  width: 46rpx;
  line-height: 46rpx;
}

.icon-jiantou image {
  width: 46rpx;
  height: 46rpx;
}

.set {
  float: right;
}

.set image {
  width: 140rpx;
  height: 52rpx;
  margin-top: 26rpx;
}